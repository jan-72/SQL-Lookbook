delimiter $$$
create procedure sumn (n int, s varchar(10))
begin
declare i int;
declare sums int;
set sums=1;
set i=2;
if s="Sum" then 
    while i<=n do
    set sums=sums+i;
    set i=i+1;
    end while;
elseif s="Product" then
    while i<=n do
    set sums=sums*i;
    set i=i+1;
    end while;
end if;
select sums;
end $$$

call sumn(10,"Product");
